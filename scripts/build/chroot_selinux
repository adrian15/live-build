## This is free software, and you are welcome to redistribute it
## under certain conditions; see COPYING for details.


set -e

# Including common functions
[ -e "${LIVE_BUILD}/scripts/build.sh" ] && . "${LIVE_BUILD}/scripts/build.sh" || . /usr/lib/live/build.sh

# Setting static variables
DESCRIPTION="$(Echo 'Install SELinux chroot packages')"
HELP=""
USAGE="${PROGRAM} {install|remove} [--force]"

Arguments "${@}"

# Reading configuration files
Read_conffiles config/all config/common config/bootstrap config/chroot config/binary config/source
Set_defaults

# Requiring stage file
Require_stagefile .build/config .build/bootstrap

Echo_message "Begin installing SELinux chroot packages..."

# Checking stage file
Check_stagefile .build/chroot_selinux

# Checking lock file
Check_lockfile .lock

# Creating lock file
Create_lockfile .lock

case "${LB_SELINUX}" in
    enforced|permissive)
        Check_package chroot /usr/bin/chcon coreutils
        Check_package chroot /sbin/setfiles policycoreutils
        Check_package chroot /etc/selinux/default/contexts/files/file_contexts selinux-policy-default
        Check_package chroot /usr/sbin/check-selinux-installation selinux-basics
        Check_package chroot /sbin/auditd auditd
        Install_package
    ;;

    #auto)
    #
    #;;
    #
    #disable)
    #
    #;;

esac

# Creating stage file
Create_stagefile .build/chroot_selinux

